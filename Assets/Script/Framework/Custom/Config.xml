<?xml version="1.0" encoding="utf-8" ?>
<root>
  <!--这两个路径为强制路径，用于开发阶段调试，如果在Platform定义了新的路径则会被覆盖-->
  <!--此外document路径没有绝对路径，只能在相对路径中定义-->
  <BundleBasePath path="E:\AssetBundles\StandaloneWindows"/>
  <LogPath path="E:\ThunderLog.txt"/>

  <!--相对路径，基路径由程序决定，可覆盖强制路径-->
  <PlatformRelative>
    <Android>
      <Bundle path="AssetBundles"/>
      <Document path="Doc"/>
      <Log path="ThunderLog.log"/>
    </Android>
    <Standalone>
      <Bundle path="AssetBundles"/>
      <Document path="MyGame\Thunder"/>
      <Log path="ThunderLog.log"/>
    </Standalone>
  </PlatformRelative>

  <SysBundleName>
    <DllBundle name="dll"/>
    <PrefabBundle name="prefabs"/>
    <UIBundle name="ui"/>
    <ValuesBundle name="values"/>
    <DatabaseBundle name="database"/>
    <LuaBundle name="lua"/>
  </SysBundleName>
</root>